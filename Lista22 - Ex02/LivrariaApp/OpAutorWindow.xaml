<Window x:Class="LivrariaApp.OpAutorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LivrariaApp"
        mc:Ignorable="d"
        Title="OpAutorWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="grid" Margin="10" TextOptions.TextFormattingMode="Ideal"/>
        <StackPanel Grid.Column="1" Margin="0,10,0,0">
            <Button Content="Atualizar" Width="100" Height="30" Margin="0,0,0,5" FontSize="14" Click="UpdateClick" />
            <Button Content="Apagar" Width="100" Height="30" Margin="0,0,0,0" FontSize="14" Click="DeleteClick"/>
        </StackPanel>
    </Grid>
</Window>
