<Window x:Class="LivrariaApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LivrariaApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="400">
    <Grid>
        <Menu VerticalAlignment="Top" FontSize="15" Background="#FFDCD6D6">
            <MenuItem Header="Cadastro">
                <MenuItem Header="Livro" Click="InsertLivroClick"/>
                <MenuItem Header="Autor" Click="InsertAutorClick"/>
            </MenuItem>
            <MenuItem Header="Acervo">
                <MenuItem Header="Livros" />
                <MenuItem Header="Autores" Click="ListarAutoresClick"/>
            </MenuItem>
        </Menu>
    </Grid>
</Window>
