<Window x:Class="Lista16.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lista16"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>
        <TextBlock Text="Distância - Km" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,15,0,0" FontSize="13"/>
        <TextBlock Text="Tempo - h" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="150,15,0,0" FontSize="13"/>
        <TextBox x:Name="txtDis" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="25" Margin="10,35,0,0" FontSize="13"/>
        <TextBox x:Name="txtTempo" VerticalAlignment="Top" HorizontalAlignment="Left" Width="100" Height="25" Margin="150,35,0,0" FontSize="13"/>
        <TextBlock Text="Velocidade - Km/h" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,110,0,0" FontSize="13"/>
        <TextBox x:Name="txtVel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="240" Height="25" Margin="10,130,0,0"/>
        <Button x:Name="btnCalcular" Content="Calcular" HorizontalAlignment="Left" VerticalAlignment="Center" Width="240" Height="28" Margin="10,10,0,0" Click="BtnCalcular_Click"/>
    </Grid>
</Window>
